<!doctype html>
<link rel="StyleSheet" href="css/Practica1css.css" type="text/css"> 
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <title>Pregunta - FaceBluff</title>
    </head>

    <body>

        <div class="pag">

            <div class="cabeceraBox anchoTotal">

                <div class="logoBox">

                    <img class="logoImg" src="img/Logo.png"/>

                </div>

                <div class="linksBox anchoTotal">

                    <div class="linksMenu">

                        <a href="/myProfile" class="menu">
                            <p class="fuentePropia negrita fuenteGrande blanco">Perfil</p>
                        </a>

                    </div>
                    <div class="linksMenu"> 

                        <a href="/friends" class="menu">
                            <p class="fuentePropia negrita fuenteGrande blanco">Amigos</p>
                        </a>

                    </div>
                    <div class="linksMenu"> 

                        <a href="/questions" class="menu">
                            <p class="fuentePropia negrita fuenteGrande blanco">Preguntas</p>
                        </a>

                    </div>
                    <div class="linksMenu"> 

                        <a href="/logOut" class="menu">
                            <p class="fuentePropia negrita fuenteGrande blanco">Desconectar</p>
                        </a>

                    </div>

                    <div> 


                        <div class="puntosUserBox">

                            <div class="perfilImgMenuBox">

                                <img class="perfilImg" src="<%= UserImg %>"/>	

                            </div>

                            <label class="fuentePropia negrita fuenteMedia blanco espacioIzq"><%= UserPoints%> pts</label>

                        </div>

                    </div>


                </div>

            </div>

            <div class="cuerpoBox">	

                <div>
                    <p class="fuentePropia negrita fuenteGrande"><%= pregunta.pregunta %></p>
                </div>

                <div class="preguntasBox">

                    <form action="/contestarPregunta" method="POST">

                        <label class="fuenteMedia espacioIzq espacioDer">
                            <input type="radio" name="respuesta" value="<%= pregunta.respuesta1 %>"> <%= pregunta.respuesta1 %>
                        </label>
                        
                        <label class="fuenteMedia espacioIzq espacioDer">
                            <input type="radio" name="respuesta" value="<%= pregunta.respuesta2 %>"> <%= pregunta.respuesta2 %>
                        </label>
                        
                        <label class="fuenteMedia espacioIzq espacioDer">
                            <input type="radio" name="respuesta" value="<%= pregunta.respuesta3 %>"> <%= pregunta.respuesta3 %>
                        </label>
                        
                        <label class="fuenteMedia espacioIzq espacioDer">
                            <input type="radio" name="respuesta" value="<%= pregunta.respuesta4 %>"> <%= pregunta.respuesta4 %>
                        </label>
                    
                        <input value="<%= pregunta.idQuestions %>" name="idQuestions" type="hidden">

                        <input class="boton fuentePropia negrita fuenteGrande blanco espacioArriba" type="submit"  value="Responder"/>

                    </form>

                </div>

            </div>

            <div class="cuerpoBox">	


            </div>

        </div>

    </body>
</html>
