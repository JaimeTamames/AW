<!doctype html>
<link rel="StyleSheet" href="css/Practica1css.css" type="text/css"> 
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <title>Añade tus Preguntas - FaceBluff</title>
    </head>

    <body>

        <div class="pag">

            <div class="cabeceraBox anchoTotal">

                <div class="logoBox">

                    <img class="logoImg" src="img/Logo.png"/>

                </div>

                <div class="linksBox anchoTotal">

                    <div class="linksMenu">

                        <a href="/myProfile" class="menu">
                            <p class="fuentePropia negrita fuenteGrande blanco">Perfil</p>
                        </a>

                    </div>
                    <div class="linksMenu"> 

                        <a href="/friends" class="menu">
                            <p class="fuentePropia negrita fuenteGrande blanco">Amigos</p>
                        </a>

                    </div>
                    <div class="linksMenu"> 

                        <a href="/questions" class="menu">
                            <p class="fuentePropia negrita fuenteGrande blanco">Preguntas</p>
                        </a>

                    </div>
                    <div class="linksMenu"> 

                        <a href="/logOut" class="menu">
                            <p class="fuentePropia negrita fuenteGrande blanco">Desconectar</p>
                        </a>

                    </div>

                    <div> 


                        <div class="puntosUserBox">

                            <div class="perfilImgMenuBox">

                                <img class="perfilImg" src="<%= UserImg %>"/>	

                            </div>

                            <label class="fuentePropia negrita fuenteMedia blanco espacioIzq"><%= UserPoints%> pts</label>

                        </div>

                    </div>


                </div>

            </div>

            <div class="cuerpoBox">	

                <div>
                    <p class="fuentePropia negrita fuenteGrande">Añade tu pregunta <%= UserName %></p>
                </div>

                <div class="preguntasBox">

                    <% if(errors === null){ %>

                    <form action="/addNewQuestion" method="POST">

                        <div class="datoSecundario fuenteMedia ">
                                <label>Tu pregunta: </label>
                                <input class=" fuenteMedia" name="pregunta" type="text"/>
                        </div>
						<div class="datoSecundario fuenteMedia ">
                                <label>Tu posible respuesta: </label>
                                <input class=" fuenteMedia" name="respuesta1" type="text"/>
                        </div>
						<div class="datoSecundario fuenteMedia ">
                                <label>Tu posible respuesta: </label>
                                <input class=" fuenteMedia" name="respuesta2" type="text"/>
                        </div>
						<div class="datoSecundario fuenteMedia ">
                                <label>Tu posible respuesta: </label>
                                <input class=" fuenteMedia" name="respuesta3" type="text"/>
                        </div>
						<div class="datoSecundario fuenteMedia ">
                                <label>Tu posible respuesta: </label>
                                <input class=" fuenteMedia" name="respuesta4" type="text"/>
                        </div>

                        <div>

							<input class="boton fuentePropia negrita fuenteGrande blanco espacioArriba" type="submit"  value="Crear nueva pregunta"/>

						</div>

                    </form>

                    
                    <% }else{ %>

                    <div class="error">
                        <%= errors %>
                    </div>

                    <% } %>

                </div>

               
           

            </div>
           
        </div>

    </body>
</html>
