<!doctype html>
<link rel="StyleSheet" href="css/Practica1css.css" type="text/css"> 
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <title>Preferencias - FaceBluff</title>
    </head>

    <body>

        <div class="pag">

            <div class="cabeceraBox anchoTotal">

                <div class="logoBox">

                    <img class="logoImg" src="img/Logo.png"/>

                </div>

                <div class="linksBox anchoTotal">

                    <div class="linksMenu">

                        <a href="/myProfile" class="menu">
                            <p class="fuentePropia negrita fuenteGrande blanco">Perfil</p>
                        </a>

                    </div>
                    <div class="linksMenu"> 

                        <a href="/friends" class="menu">
                            <p class="fuentePropia negrita fuenteGrande blanco">Amigos</p>
                        </a>

                    </div>
                    <div class="linksMenu"> 

                        <a href="/questions" class="menu">
                            <p class="fuentePropia negrita fuenteGrande blanco">Preguntas</p>
                        </a>

                    </div>
                    <div class="linksMenu"> 

                        <a href="/logOut" class="menu">
                            <p class="fuentePropia negrita fuenteGrande blanco">Desconectar</p>
                        </a>

                    </div>

                    <div> 


                        <div class="puntosUserBox">

                            <div class="perfilImgMenuBox">

                                <img class="perfilImg" src="<%= UserImg %>"/>


                            </div>

                            <label class="fuentePropia negrita fuenteMedia blanco espacioIzq"><%= UserPoints%> pts</label>

                        </div>

                    </div>


                </div>

            </div>

            <div class="cuerpoBox">	

                <div>
                    <p class="fuentePropia negrita fuenteGrande">Mis datos</p>
                </div>

                <div class="perfilBox">

                    <div class="perfilImgBox">

                        <img class="perfilImg" src="<%= UserImg %>"/>


                    </div>

                    <form action="/aplicarCambiosPerfil" method="POST" class="modificarPerfilPost">

                        <div class="datosPerfil">

                            <span class="fuenteMedia ">
                                <label>Nombre: </label>
                                <input class="fuenteMedia" name="nombre" type="text" value="<%= UserName %>">
                            </span>

                            <div class="datosPerfilSecundariosBox ">

                                <span class="datoSecundario fuenteMedia">
                                    <label>Contrase√±a: </label>
                                    <input class="fuenteMedia" name="pass" type="password" placeholder='Necesaria, puede cambiarla...'>
                                </span>
                                <span class="datoSecundario fuenteMedia">
                                    <label>Fecha nacimiento: </label>
                                    <input class="fuenteMedia" name="fechaNacimiento" type="datetime" value="<%= UserDate %>">
                                </span>
                                <span class="datoSecundario fuenteMedia">
                                    <label>Sexo: </label>
                                    <label class="espacioIzq espacioDer">
                                        <input type="radio" name="sexo" value="Masculino" <% if(UserSex == "Masculino"){ %> checked <%}%> > Masculino
                                    </label>

                                    <label class="espacioIzq espacioDer">
                                        <input type="radio" name="sexo" value="Femenino" <% if(UserSex == "Femenino"){ %> checked <%}%> > Femenino
                                    </label>

                                    <label class="espacioIzq espacioDer">
                                        <input type="radio" name="sexo" value="Otro" <% if(UserSex == "Otro"){ %> checked <%}%> > Otro
                                    </label>
                                </span>

                                <div>

                                    <input name="img" type="file" value="<%= UserImg %>">

                                </div>

                            </div>
                        </div>
                        <div class="botonModificarPerfilBox">

                            <input class="boton fuentePropia negrita fuenteGrande blanco" type="submit"  value="Aplicar cambios"/>				

                        </div>
                    </form>


                </div>

                <% if (errores.email) { %>
                <div class="error">
                    <%= errores.email.msg %>
                </div>
                <% } %>

                <% if (errores.pass) { %>
                <div class="error">
                    <%= errores.pass.msg %>
                </div>
                <% } %>

                <% if (errores.nombre) { %>
                <div class="error">
                    <%= errores.nombre.msg %>
                </div>
                <% } %>

                <% if (errores.fechaNacimiento) { %>
                <div class="error">
                    <%= errores.fechaNacimiento.msg %>
                </div>
                <% } %>

            </div>


        </div>

    </div>

</body>
</html>
